        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.1.0",
        "vite": "^6.0.11"
    },
    "dependencies": {
        "mkdirp": "^3.0.1",
        "ncp": "^2.0.0",
        "npm-run-all": "^4.1.5",
