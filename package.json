        "copy-tinymce": "ncp vendor/tinymce/ public/vendor/",
        "copy-tinymce-langs": "ncp resources/other-plugins/tinymce-langs public/vendor/tinymce",
        "copy-images-folder": "ncp resources/images public/build/images",
        "dev": "vite"
    },
